		= go_to(image_tag('/images/icon/left.png',:id => "l"),last_page_path)
	#next.right
		= go_to(image_tag('/images/icon/right.png',:id => "n"),next_page_path)
#content.center
	= render :partial => 'page'
#chat_new.center
	.chat.left.round.shadow
		= javascript_include_tag 'upload'
		= render :file => 'comments/new'
