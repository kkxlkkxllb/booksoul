	= javascript_include_tag 'jquery.validate.min','messages_cn','ajaxload'
	= kindeditor_javacript_include_tag
	= stylesheet_link_tag 'read','comments'
- content_for :nav do
	= render :partial => 'book_nav'
#say
	= link_to t('comment.new'),"#chat_new"
#forward_page
